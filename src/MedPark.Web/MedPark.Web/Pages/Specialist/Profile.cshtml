@page
@model MedPark.Web.Pages.Specialist.ProfileModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="mt-3">

    <partial name="MedParkNotificationBanner" />

    <div class="w-25 float-left user-details-container">

        <div class="avatar-container">
            <img class="img-avatar" src="@(!string.IsNullOrEmpty(Model.Avatar) ? Model.Avatar.ToLower() : "~/img/placeholder-avatar.png")" />
        </div>

        <div class="mt-4 user-details-container">

            <h1>@Model.FirstName @Model.LastName</h1>

            <div class="read-only-profile">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fa fa-envelope mr-2"></i>
                        <span>@Model.Email</span>
                    </li>
                    <li class="mb-2">
                        <i class="fa fa-calendar mr-2"></i>
                        <span>@(Model.Birthday.HasValue ? Model.Birthday.Value.ToShortDateString() : "")</span>
                    </li>
                </ul>
            </div>

            <div class="edit-profile" style="display:none">
                <ul class="list-unstyled list-details">
                    <li class="mb-3">
                        <i class="fa fa-user mr-2 float-left"></i>
                        <input class="form-control" type="text" value="@Model.FirstName" placeholder="First Name" />
                    </li>
                    <li class="mb-3">
                        <i class="fa fa-user mr-2 float-left"></i>
                        <input class="form-control" type="text" value="@Model.LastName" placeholder="Last Name" />
                    </li>
                    <li class="mb-3">
                        <i class="fa fa-envelope mr-2 float-left"></i>
                        <input class="form-control" type="text" value="@Model.Email" placeholder="Email" />
                    </li>
                    <li class="mb-3">
                        <i class="fa fa-calendar mr-2 float-left"></i>
                        <input class="form-control" type="text" value="@(Model.Birthday.HasValue ? Model.Birthday.Value.ToShortDateString() : "")" placeholder="Date of Birth" />
                    </li>
                </ul>

                <button class="btn btn-success mr-3" id="btnSaveProfile">Save</button>
                <button class="btn btn-info" id="btnCancelSave">Cancel</button>
            </div>

            <button class="btn btn-primary" id="btnShowEdit">Edit</button>

        </div>

        <br />

        <div class="clearfix mt-4 user-details-container">

            <h4>Addresses:</h4>

        </div>

    </div>

    <div class="w-75 float-left'">
        &nbsp;

    </div>

</div>

