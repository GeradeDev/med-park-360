@page "/Account/Profile/"
@using Microsoft.AspNetCore.Authentication

@model MedPark.Web.Pages.Account.ProfilePageModel
@{
    ViewData["Title"] = "ProfilePage";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="page-section" id="customer-profile">
    <div class="container">
        <div class="row m-4">
            <div class="col-lg-12 text-center">
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="team-member">
                    <img class="mx-auto rounded-circle" src="@Model.Avatar" alt="">
                    <h4>@Model.FirstName @Model.LastName</h4>
                </div>
            </div>
            <div class="col-md-8">
                <ul class="nav nav-pills" id="myTab" role="tablist">
                    <li class="nav-item col-sm-3 pl-0">
                        <a class="nav-link shadow" data-toggle="pill" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
                    </li>
                    <li class="nav-item col-sm-3">
                        <a class="nav-link shadow" id="calendar-tab" data-toggle="pill" href="#calendar" role="tab" aria-controls="calendar" aria-selected="false">Calendar</a>
                    </li>
                    <li class="nav-item col-sm-3">
                        <a class="nav-link shadow" id="orders-tab" data-toggle="pill" href="#orders" role="tab" aria-controls="orders" aria-selected="false">Orders</a>
                    </li>
                    <li class="nav-item col-sm-3 pr-0">
                        <a class="nav-link shadow" id="contact-tab" data-toggle="pill" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
                    </li>
                </ul>
                <div class="tab-content shadow" id="myTabContent">
                    <form id="customer-details-form">
                        <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <input class="form-control form-control-sm border shadow-sm " data-val="true" id="FirstName" name="FirstName" placeholder="First name" type="text" value="@Model.FirstName" data-bv-notempty="true" data-bv-notempty-message="First Name is required and cannot be empty">
                                </div>
                                <div class="form-group col-sm-6">
                                    <input class="form-control form-control-sm border shadow-sm " data-val="true" id="LastName" name="LastName" placeholder="Last name" type="text" value="@Model.LastName" data-bv-notempty="true" data-bv-notempty-message="Last Name is required and cannot be empty">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <input class="form-control form-control-sm border shadow-sm " data-val="true" id="Email" name="Email" placeholder="Email address" type="text" value="@Model.Email" data-bv-notempty="true" data-bv-notempty-message="Email is required and cannot be empty">
                                </div>
                                <div class="form-group col-sm-6">
                                    <input class="form-control form-control-sm border shadow-sm " data-val="true" id="Mobile" name="Mobile" placeholder="Mobile number" type="text" value="@Model.Mobile" data-bv-notempty="true" data-bv-notempty-message="Mobile number is required and cannot be empty">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <input class="form-control form-control-sm border shadow-sm " data-val="true" id="BirthDate" name="BirthDate" placeholder="Date of Birth" type="text" value="@Model.Birthday" data-bv-notempty="true" data-bv-notempty-message="Date of Birth is required and cannot be empty">
                                </div>
                                <div class="form-group col-sm-6">
                                    <input class="form-control form-control-sm border shadow-sm " data-val="true" id="Avatar" name="Avatar" placeholder="Avatar" type="text" value="@Model.Avatar">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <input class="form-control form-control-sm border shadow-sm " data-val="true" id="NewPassword" name="NewPassword" placeholder="Update Password" type="text" value="">
                                </div>
                                <div class="form-group col-sm-6">
                                    <input class="form-control form-control-sm border shadow-sm " data-val="true" id="ConfirmNewPassword" name="ConfirmNewPassword" placeholder="Confirm Password Update" type="text" value="">
                                </div>
                            </div>

                            <div class="form-row d-flex justify-content-sm-end">
                                <a class="btn btn-primary text-uppercase" href="#" id="btnUpdateCustomer">Update</a>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="calendar" role="tabpanel" aria-labelledby="calendar-tab">

                        </div>
                        <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">

                        </div>
                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

